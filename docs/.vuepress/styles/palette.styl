.footer:before {
    visibility hidden
    opacity 0
    position absolute
    content ''
    background-image url(https://i.imgur.com/0CV4nHB.jpg)
    background-size cover
    background-color #fff
    background-position center
    width 75px
    height 75px
    border-radius 5px
    font-size 32px
    line-height 0rem
    box-shadow 0 3px 25px 0 rgba(0,0,0,0.15)
    bottom 50%
    left 50%
    transform translateX(-50%)
    transition 0.4s ease-in-out
}

.footer:after {
    opacity 0
    visibility hidden
    position absolute
    content 'ðŸ’©'
    font-size 32px
    bottom 50%
    left 50%
    transform translateX(-50%)
    transition 0.4s ease-in-out
}

.footer:hover:before {
    visibility visible
    bottom 30%
    opacity 1
}
 .footer:hover:after {
     opacity 1
     visibility visible
     bottom 40%
 }

